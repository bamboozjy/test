/* pages/shop/shop.wxss */

.all{
  background: #DCDCDC;
   padding-bottom: 100rpx; 
}
.navPic image{
  width:750rpx;
  height: 350rpx;
}
.main{
  background: #DCDCDC;
  padding: 20rpx 20rpx 0rpx;
  margin-top: -11rpx;
}
.bgbrmr{
  background: #fff;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}
.fx{
  display: flex;
}

.nav{
  justify-content: space-around;
}
.nav .item{
  flex-direction: column;
  /* justify-content: space-around; */
  align-items: center;
  padding: 40rpx 0;
}
.nav .item image{
  width: 65rpx;
  height: 60rpx;
  margin-bottom: 23rpx;
}
.nav .item view{
  color: #333;
  font-size: 22rpx;
  width: 120rpx;
  text-align: center;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.store{
  padding: 28rpx 18rpx;
}
.store .top{
  color: #2058A9;
}

.top{
  margin-bottom: 30rpx;
}
.top .tit{
  font-size: 26rpx;
  margin-right: 10rpx;
}
.top text{
  font-size: 20rpx;
}

.store .b-left image{
  width:180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.store .b-right .con{
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
}
.setwidth{
  width:400rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.setwidthmore{
  /* width:400rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.store .con image{
  margin-right: 14rpx;
  width: 30rpx;
  height: 30rpx;
}
.store .con view{
  width:400rpx;
  color: #333;
  font-size: 24rpx;
}
.store .btn button{
  width:180rpx;
  height: 70rpx;
  border-radius: 6rpx;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  background: #D097CF;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.store .btn image{
  margin-left: 10rpx;
  width: 16rpx;
  height: 20rpx;
}

.group{
  padding: 28rpx 18rpx;
}
.group .top{
  color: #5DD6B9;
}
.group .bot{
  justify-content: space-between;
  padding-bottom: 20rpx;
}
.group .bot>view{
  border: 1px solid #ccc;
  border-radius: 10rpx;
  overflow: hidden;
}
.group .bot image{
  width: 330rpx;
  height: 330rpx;
}
.group .bot view view{
  color: #333;
  font-size: 24rpx;
  line-height: 40rpx;
  padding-left: 18rpx;
}
.group .bot .size{
  width: 310rpx;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.group .bot .typ{
  margin-bottom: 20rpx;
}

.recom{
  position: relative;
  width: 750rpx;
  height: 100rpx;
}
.recom .tit{
  font-size: 26rpx;
  color: #333;
  position: absolute;
  background: #DCDCDC;
  width: 150rpx;
  top: 6rpx;
  left: 300rpx;
  z-index: 99;
  text-align: center;
}
.recom .english{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 400rpx;
  height: 50rpx;
  text-align: center;
  color: #666;
  font-size: 20rpx;
  line-height: 55rpx;
  border: 1px solid #EDEEF3;
}

.pro{
  background: #fff;
  margin-bottom: 100rpx;
  width:750rpx;
  flex-wrap: wrap;
}
.pro .con{
  width: 375rpx;
  box-sizing: border-box;
}
.pro .bot{
  margin-top: -11rpx;
}
.pro .con:nth-of-type(odd) .bot{
  border-right:1px solid #EDEEF3;
}
.pro .con:nth-of-type(even) .bot{
  border-left:1px solid #EDEEF3;
}
.pro .con:nth-of-type(1) .bot,.pro .con:nth-of-type(2) .bot{
  border-bottom:2px solid #EDEEF3;
}
.pro .con image{
  width: 100%;
  height: 375rpx;
}
.pro .con .intro{
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.pro .msg{
  padding: 0rpx 18rpx 20rpx;
  justify-content: space-between;
  align-items: center;
}
.pro .msg .price{
  font-size: 24rpx;
  color: #628CD9;
}
.pro .msg .cart{
  width: 40rpx;
  height: 40rpx;
}

